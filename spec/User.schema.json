{
	"id": "User",
	"type": "object",
	"properties": {
        "username": { "type": "string" },
        "name": { "type": "string" },
        "email": { 
        	"type": "string",
        	"format": "email"
        },
        "last_logged_in": { "$ref": "Timestamp.schema.json" },
        "roles": { 
        	"type": "array",
        	"items": { "$ref": "RoleAssignment.schema.json" }
        }
	},
    "additionalProperties": false,
    "required": [ "username", "name", "email", "last_logged_in", "roles" ]
}